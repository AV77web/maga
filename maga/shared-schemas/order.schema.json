{
  "$id": "https://example.com/schemas/order.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Ordine",
  "description": "Schema unico per creazione (POST) e aggiornamento (PATCH) di un ordine",
  "type": "object",
  "properties": {
    "operation": {
      "type": "string",
      "enum": ["create", "update"],
      "description": "Indica se la validazione è per creazione o aggiornamento"
    },
    "num_ordine": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "errorMessage": {
        "minLength": "Il campo 'num_ordine' non può essere vuoto.",
        "maxLength": "Il campo 'num_ordine' non può superare 50 caratteri."
      }
    },
    "data_ordine": {
      "type": "string",
      "format": "date",
      "errorMessage": {
        "format": "Il campo 'data_ordine' deve essere una data valida (YYYY-MM-DD)."
      }
    },
    "controparte_id": {
      "type": "integer",
      "minimum": 1,
      "errorMessage": {
        "type": "Il campo 'Fornitore/Cliente' deve essere un numero intero.",
        "minimum": "Il campo 'Fornitore/Cliente' deve essere maggiore di 0."
      }  
    },
    "rag_soc": { 
      "type": "string",
      "maxLength": 100
    },
    "partita_iva": {
      "type": "string",
      "maxLength": 11
    },
    "indirizzo_fatturazione":{
      "type": "string",
      "maxLength": 100 
    },
    "indirizzo_spedizione":{
      "type": "string",
      "maxLength": 100
    },
    "contatto": {
      "type": "string",
      "maxLength":100
    },
    "stato": {
      "type": "string",
      "enum": ["Aperto", "Chiuso", "Annullato"],
      "errorMessage": {
        "enum": "Il campo 'stato' deve essere 'Aperto', 'Chiuso' o 'Annullato'."
      }
    },
    "magazzino_origine": {
      "type": "string",
      "maxLenght": 100
    },
    "magazzino_destinazione": {
      "type": "string",
      "maxLenght": 1000
    },
    "data_consegna_prevista":  {
      "type": "string",
      "format": "date"
    },
    "priorita": { 
      "type": "string",
      "ENUM":["Alta", "Media", "Bassa"]},
    "vettore": {
      "type": "string",
      "maxLenght": 100
    },
    "tipo_trasporto": {
      "type": "string",
      "maxLenght": 100
    },
    "valuta":{
      "type": "string",
      "maxLength": 20
    },
    "listino": {
      "type": "string",
      "maxLength": 50
    },
    "sconto_totale": {
      "type": "number",
      "minimum": 0,
      "errorMessage": {
        "minimum": "Il campo sconto totale non può essere  negativo."
      }
    },
    "condizioni_pagamento": {
      "type": "string",
      "maxLength": 50
    },
    "aliquota_iva": {
      "type": "number",
      "minimum0": 0
    },
    "documento_collegato":{
      "type": "string",
      "maxLength": 50
    },
    "utente_creazione": {
      "type": "string",
      "maxLength": 50
    },
    "causale": {
      "type": "string",
      "maxLength": 100
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at":{
      "type": "string",
      "format": "date-time" 
    },
    "note": {
      "type": "string",
      "maxLength": 500
    }

  },
  "required": ["num_ordine", "data_ordine", "controparte_id", "stato"],
  "allOf": [
    {
      "if": {
        "properties": { "operation": { "const": "create" } }
      },
      "then": {
        "required": ["num_ordine", "data_ordine", "controparte_id", "stato"]
      }
    },
    {
      "if": {
        "properties": { "operation": { "const": "update" } }
      },
      "then": {
        "required": []
      }
    }
  ],
  "additionalProperties": false,
  "errorMessage": {
    "required": {
      "num_ordine": "Il campo 'num_ordine' è obbligatorio.",
      "data_ordine": "Il campo 'data_ordine' è obbligatorio.",
      "controparte_id": "Il campo 'controparte_id' è obbligatorio.",
      "stato": "Il campo 'stato' è obbligatorio."
    },
    "additionalProperties": "Sono presenti campi non ammessi nella richiesta di ordine."
  }
}
